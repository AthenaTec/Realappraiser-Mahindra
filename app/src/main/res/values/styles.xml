    <style name="TextInputLayout_hint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/font_very_small</item>
    </style>

    <style name="TextInputLayout_hint_general" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/font_very_small</item>
