        <item name="android:textColor">@color/font_heading</item>
    </style>


    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar" tools:ignore="UnusedResources">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="myTextAppearance" parent="@android:style/TextAppearance" tools:ignore="UnusedResources">
        <item name="android:textSize">@dimen/font_very_small</item>
