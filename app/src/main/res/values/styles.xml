    </style>

    <style name="StyledImagedown_large">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">@dimen/height_1</item>
        <item name="android:paddingTop">@dimen/height_12</item>
        <item name="android:paddingLeft">@dimen/height_12</item>
        <item name="android:paddingBottom">@dimen/height_12</item>
        <item name="android:paddingRight">@dimen/height_0</item>
        <item name="android:src">@drawable/spinner_down</item>
    </style>

    <style name="StyledImagedown_internal">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">@dimen/height_1</item>
        <item name="android:paddingTop">@dimen/height_5</item>
        <item name="android:paddingLeft">@dimen/height_15</item>
        <item name="android:paddingBottom">@dimen/height_5</item>
        <item name="android:paddingRight">@dimen/height_0</item>
        <item name="android:src">@drawable/spinner_down</item>
    </style>

    <style name="StyledImagedown_floor_spinner">
        <item name="android:layout_width">@dimen/_15sdp</item>
        <item name="android:layout_height">@dimen/_15sdp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="StyledImagedown_" tools:ignore="UnusedResources">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">@dimen/height_1</item>
        <item name="android:paddingTop">@dimen/height_5</item>
        <item name="android:paddingLeft">@dimen/height_5</item>
        <item name="android:paddingBottom">@dimen/height_5</item>
        <item name="android:paddingRight">@dimen/height_0</item>
