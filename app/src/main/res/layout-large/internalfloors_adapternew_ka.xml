<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_3"
        android:layout_marginTop="@dimen/height_8"
        android:orientation="horizontal"
        android:weightSum="6.8"
        tools:ignore="RtlHardcoded,UselessParent">

        <TextView
            android:id="@+id/textview_internal_floor_name_composition"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:hint="@string/general_floor_name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Floor 1"
            android:textSize="@dimen/font_samll"
            tools:ignore="HardcodedText,RtlHardcoded,TextViewEdits" />

        <EditText
            android:id="@+id/internal_hall_dinning"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/height_2"
            android:layout_marginRight="@dimen/height_2"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:nextFocusForward="@+id/internal_kitchen"
            android:singleLine="true"
            android:textSize="@dimen/font_samll"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/internal_kitchen"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/height_2"
            android:layout_marginRight="@dimen/height_2"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:nextFocusForward="@+id/internal_bedroom"
            android:singleLine="true"
            android:textSize="@dimen/font_samll"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/internal_bedroom"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/height_2"
            android:layout_marginRight="@dimen/height_2"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:nextFocusForward="@+id/internal_bath"
            android:singleLine="true"
            android:textSize="@dimen/font_samll"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/internal_bath"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/height_2"
            android:layout_marginRight="@dimen/height_2"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:nextFocusForward="@+id/internal_shop_office"
            android:singleLine="true"
            android:textSize="@dimen/font_samll"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/internal_shop_office"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/height_2"
            android:layout_marginRight="@dimen/height_2"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:nextFocusDown="@+id/internal_hall_dinning"
            android:singleLine="true"
            android:textSize="@dimen/font_samll"
            tools:ignore="LabelFor" />

        <LinearLayout
            android:id="@+id/image_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="@dimen/height_3"
                app:srcCompat="@drawable/icon_add" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>