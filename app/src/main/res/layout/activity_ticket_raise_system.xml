<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_5"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:padding="10dp"
        android:text="Raise Ticket"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:background="@color/colorPrimary"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spinner_pop_up_dialog_bg"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Query : "
        android:fontFamily="@font/medium"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        />
        <Spinner
            android:id="@+id/spinnerMeasurement_doc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/spinner_status"
            android:popupBackground="@drawable/spinner_pop_up_dialog_bg"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description : "
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            />
        <EditText
            android:id="@+id/etNotes"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_100sdp"
            android:background="@drawable/description_text_area"
            android:hint=""
            android:gravity="top|start"
            android:fontFamily="@font/regular"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/Activite"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    >
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            />
        <EditText
            android:id="@+id/et_email"
            style="@style/StyledTilEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginRight="@dimen/height_2"
            android:layout_weight="1"
            android:inputType="text"
            android:textSize="@dimen/font_samll"
            android:visibility="visible"
            />
</LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAP ID : "
                    android:fontFamily="@font/medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    />
                <EditText
                    android:id="@+id/et_sapID"
                    style="@style/StyledTilEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/height_2"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textSize="@dimen/font_samll"
                    android:visibility="visible"
                    />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number : "
                    android:fontFamily="@font/medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    />
                <EditText
                    android:id="@+id/et_contactNumber"
                    style="@style/StyledTilEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/height_2"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="@dimen/font_samll"
                    android:visibility="visible"
                    />
            </LinearLayout>




        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Screen Shot"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            />

        <LinearLayout
            android:id="@+id/imagedefaultlayout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/create_ticket_add_image"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/plus"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:id="@+id/addimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:text="Upload Image"
                android:textColor="@color/orange"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>

        </LinearLayout>


</LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:paddingStart="@dimen/_18sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_18sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Create Ticket"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible"
            />


    </RelativeLayout>
    <!--android:background="#66999999"-->



</LinearLayout>