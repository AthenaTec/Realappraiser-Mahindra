<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textColor="@color/font_2"
        android:textSize="30dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="@dimen/height_18"
        android:orientation="horizontal"
        android:weightSum="4.5">

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"></View>

        <Button
            android:id="@+id/buttonadd"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1.2"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="@dimen/height_18"
        android:orientation="horizontal"
        android:weightSum="4.5">

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <Button
            android:id="@+id/button5"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <Button
            android:id="@+id/button6"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"></View>

        <Button
            android:id="@+id/buttonsub"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1.2"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="@dimen/fab_margin"
        android:orientation="horizontal"
        android:weightSum="4.5">

        <Button
            android:id="@+id/button7"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <Button
            android:id="@+id/button8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <Button
            android:id="@+id/button9"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"></View>

        <Button
            android:id="@+id/buttonmul"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1.2"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="@dimen/fab_margin"
        android:orientation="horizontal"
        android:weightSum="4.5">

        <Button
            android:id="@+id/button10"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="."
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <Button
            android:id="@+id/button0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <Button
            android:id="@+id/buttonC"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"></View>

        <Button
            android:id="@+id/buttondiv"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1.2"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="@dimen/fab_margin"
        android:orientation="horizontal"
        android:weightSum="4.5">

        <Button
            android:id="@+id/button_close"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1.5"
            android:background="@color/colorPrimary"
            android:padding="@dimen/height_20"
            android:text="Close"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <Button
            android:id="@+id/button_set"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1.5"
            android:background="@color/colorPrimary"
            android:padding="@dimen/height_20"
            android:text="Set Value"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"></View>

        <Button
            android:id="@+id/buttoneql"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_6"
            android:layout_weight="1.2"
            android:background="@drawable/border_lite_grey"
            android:padding="@dimen/height_20"
            android:text="="
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_large" />

    </LinearLayout>

</LinearLayout>
