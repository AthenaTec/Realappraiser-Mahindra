<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/height_3"
        android:layout_marginTop="@dimen/height_8"
        android:orientation="horizontal"
        android:weightSum="6"
        tools:ignore="RtlHardcoded,UselessParent">

        <TextView
            android:id="@+id/textview_internal_floor_name_composition"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:hint="@string/general_floor_name"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:text="Floor 1"
            android:textSize="@dimen/font_samll"
            tools:ignore="HardcodedText,RtlHardcoded,TextViewEdits" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/height_12"
            android:layout_weight="1.1"
            android:background="@drawable/bottom_grey_zero"
            tools:ignore="RtlHardcoded">

            <Spinner
                android:id="@+id/internal_hall_dinning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/font_extra_large" />

            <ImageView
                style="@style/StyledImagedown_internal"
                android:layout_marginTop="@dimen/height_4"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/height_12"
            android:layout_weight="1"
            android:background="@drawable/bottom_grey_zero"
            tools:ignore="RtlHardcoded">

            <Spinner
                android:id="@+id/internal_kitchen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />

            <ImageView
                style="@style/StyledImagedown_internal"
                android:layout_marginTop="@dimen/height_4"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/height_12"
            android:layout_weight="1"
            android:background="@drawable/bottom_grey_zero"
            tools:ignore="RtlHardcoded">

            <Spinner
                android:id="@+id/internal_bedroom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />

            <ImageView
                style="@style/StyledImagedown_internal"
                android:layout_marginTop="@dimen/height_4"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/height_12"
            android:layout_weight="1"
            android:background="@drawable/bottom_grey_zero"
            tools:ignore="RtlHardcoded">

            <Spinner
                android:id="@+id/internal_bath"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />

            <ImageView
                style="@style/StyledImagedown_internal"
                android:layout_marginTop="@dimen/height_4"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/height_12"
            android:layout_weight="1"
            android:background="@drawable/bottom_grey_zero"
            tools:ignore="RtlHardcoded">

            <Spinner
                android:id="@+id/internal_shop_office"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />

            <ImageView
                style="@style/StyledImagedown_internal"
                android:layout_marginTop="@dimen/height_4"
                tools:ignore="ContentDescription" />

        </FrameLayout>
    </LinearLayout>


</LinearLayout>