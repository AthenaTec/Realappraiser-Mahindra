<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ticketRaiseSystem.TicketRaiseSystemActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_5"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:padding="10dp"
        android:text="Ticket No #2001"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/spinner_pop_up_dialog_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:text="Query : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <Spinner
                    android:id="@+id/spinnerMeasurement_doc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/spinner_status"
                    android:popupBackground="@drawable/spinner_pop_up_dialog_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    android:text="Description : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/description_text_area"
                    android:fontFamily="@font/regular"
                    android:gravity="top|start"
                    android:hint=""
                    android:minHeight="@dimen/_100sdp"
                    android:textColor="@color/Activite"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:text="Comments : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp" />

                    <EditText
                        android:id="@+id/et_comments"
                        style="@style/StyledTilEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/height_2"
                        android:layout_weight="1"
                        android:background="@drawable/description_text_area"
                        android:inputType="text"
                        android:textSize="@dimen/font_samll"
                        android:visibility="visible" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/medium"
                            android:text="Contact Number : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />

                        <EditText
                            android:id="@+id/et_contactNumber"
                            style="@style/StyledTilEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/height_2"
                            android:layout_weight="1"
                            android:background="@drawable/description_text_area"
                            android:inputType="number"
                            android:textSize="@dimen/font_samll"
                            android:visibility="visible" />
                    </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    android:text="Sample Screen Shot"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:id="@+id/imagedefaultlayout"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/create_ticket_add_image"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/plus"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/addimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="Upload Image"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:paddingStart="@dimen/_18sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_18sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Re-Create Ticket"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/closeTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:paddingStart="@dimen/_18sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_18sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Close Ticket"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>
    <!--android:background="#66999999"-->


</LinearLayout>