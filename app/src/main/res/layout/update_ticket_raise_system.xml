<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        >
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp"
            />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/btn_back"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/spinner_pop_up_dialog_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:text="Query : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:id="@+id/etQuery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/description_text_area"
                    android:clickable="false"
                    android:editable="false"
                    android:fontFamily="@font/regular"
                    android:gravity="top|start"
                    android:hint=""
                    android:textColor="@color/Activite"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    android:text="Description : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/description_text_area"
                    android:clickable="false"
                    android:editable="false"
                    android:fontFamily="@font/regular"
                    android:gravity="top|start"
                    android:hint=""
                    android:minHeight="@dimen/_100sdp"
                    android:textColor="@color/Activite"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:text="Comments* : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp" />

                    <EditText
                        android:id="@+id/et_comments"
                        style="@style/StyledTilEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/height_2"
                        android:layout_weight="1"
                        android:background="@drawable/description_text_area"
                        android:inputType="text"
                        android:textSize="@dimen/font_samll" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:text="Contact Number : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp" />

                    <EditText
                        android:id="@+id/et_contactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/height_2"
                        android:layout_weight="1"
                        android:background="@drawable/description_text_area"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:textSize="@dimen/font_samll"
                        android:visibility="visible"
                        android:maxLength="10"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_ticketImage"
                    android:orientation="vertical"
                    >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    android:text="Sample Screen Shot"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:divider="@null"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ticket_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/buttonshape"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:paddingStart="@dimen/_18sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_18sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="Re-Create Ticket"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/closeTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/buttonshape"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:paddingStart="@dimen/_18sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_18sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="Close Ticket"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>
    <!--android:background="#66999999"-->


</LinearLayout>

</androidx.core.widget.NestedScrollView>