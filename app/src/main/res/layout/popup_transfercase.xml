<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:background="@drawable/cardview_dialog_layout"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/case_transfer"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/popup_white_rec_bg"
        >

    <LinearLayout
        android:id="@+id/layoutCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You want to transfer Mr.SounderRajan case to"
            android:textAlignment="center"
            android:textColor="@color/Activite"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:singleLine="true"
            />

        <LinearLayout
            android:id="@+id/offlineViewCaseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="2">

                <TextView
                   android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:id="@+id/tvFieldStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:text="@string/field_staff"
                    android:fontFamily="@font/medium"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Spinner
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:id="@+id/spinner_FieldStaff"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/spinner_status"
                        android:spinnerMode="dropdown"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|start"
                        />
                  <!--  <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                       >



                       &lt;!&ndash; <ImageView
                            style="@style/StyledImagedown_internal"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            tools:ignore="ContentDescription" />&ndash;&gt;

                    </LinearLayout>-->


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/noBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/cancel_"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/yesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/transfer"
            android:textColor="@color/White"
            android:textSize="16sp" />
    </LinearLayout>
    </LinearLayout>


</LinearLayout>
