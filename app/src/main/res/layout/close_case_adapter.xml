    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5sdp"
        app:cardMaxElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        >

    <LinearLayout
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/case_bg"
            android:gravity="left|start"
            >

            <TextView
                android:id="@+id/close_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Id : "
                android:textColor="@color/black"
                />



        <TextView
            android:id="@+id/close_caseid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C0001"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Activite"
            android:textSize="13sp"
            tools:ignore="HardcodedText"

            />


        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right|end"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    >

                <TextView
                    android:id="@+id/assigned_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assigned Date : "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    />
            <TextView
                android:id="@+id/assigned_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18-Dec17"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/closed_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closed Date : "
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/closed_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18-Dec17"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/slightgrey" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            >

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textColor="@color/black"
                android:textSize="13sp"
                />

        <TextView
            android:id="@+id/close_personname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tharani"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Activite"
            android:textSize="13sp"
            tools:ignore="HardcodedText"
            android:singleLine="true"
            android:maxLines="1"
            />

    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            >

            <TextView
                android:id="@+id/mobile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No : "
                android:textColor="@color/black"
                android:textSize="13sp"
                />

        <TextView
            android:id="@+id/close_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9087578965"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Activite"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            >

            <TextView
                android:id="@+id/bank_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank : "
                android:textColor="@color/black"
                android:textSize="13sp"
                />

        <TextView
            android:id="@+id/close_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ICICI"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Activite"
            android:textSize="13sp"
            tools:ignore="HardcodedText"
            android:singleLine="true"
            android:maxLines="1"
            />

        </LinearLayout>




    </LinearLayout>


    </androidx.cardview.widget.CardView>

