<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@color/White"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlaycheck"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/offlinecaseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/offline_caseid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:paddingStart="18dp"
                android:button="@drawable/check_box_selector"
                android:textColor="@color/Activite"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/offline_personname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="asdfas"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="2dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Gray"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/offlinebankname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="1dp"
                android:text="-"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/Activite"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/offlineaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="asdfasfd"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="2dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Gray"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/slightgrey"/>
</LinearLayout>