<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_dialog_layout"
            android:padding="@dimen/_10sdp"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stage_type"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:gravity="start"
                />

            <ImageView
                android:id="@+id/close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_close_pop_up"
                tools:ignore="ContentDescription,RtlHardcoded"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/popup_white_rec_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"

            >

            <RadioGroup
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/id_radiogroup_stage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_4"
                android:layout_marginTop="@dimen/height_4"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="Select"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="50%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_55"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="55%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />


                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="60%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_65"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="65%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_70"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="70%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_75"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="75%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_80"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="80%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="85%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_90"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="90%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_95"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="95%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="100%"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <RadioButton
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/id_radio_Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_8"
                    android:checked="false"
                    android:paddingLeft="@dimen/height_8"
                    android:text="Custom"
                    android:textSize="@dimen/font_medium"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
            </RadioGroup>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>