<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_actual_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_1"
        android:layout_marginRight="@dimen/height_1"
        android:layout_marginTop="@dimen/height_5"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="6"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textview_actual_floor"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:inputType="text"
            android:paddingRight="@dimen/height_2"
            android:text=""
            android:textSize="@dimen/font_samll"
            tools:ignore="RtlHardcoded,RtlSymmetry,TextViewEdits" />

        <TextView
            android:id="@+id/textview_actual_unit"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:inputType="text"
            android:paddingLeft="@dimen/height_2"
            android:paddingRight="@dimen/height_2"
            android:text=""
            android:textSize="@dimen/font_samll"
            tools:ignore="TextViewEdits" />


        <EditText
            android:id="@+id/edittext_actual_rate"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:maxLength="10"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_4"
            android:nextFocusForward="@+id/edittext_actual_dep_per"
            android:layout_weight="1.2"
            android:inputType="number"
            android:paddingLeft="@dimen/height_2"
            android:paddingRight="@dimen/height_2"
            android:textSize="@dimen/font_samll"
            tools:ignore="LabelFor,RtlHardcoded" />


        <TextView
            android:id="@+id/textview_actual_value"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/height_8"
            android:layout_weight="1.3"
            android:inputType="numberDecimal"
            android:paddingLeft="@dimen/height_2"
            android:paddingRight="@dimen/height_2"
            android:text=""
            android:textSize="@dimen/font_samll"
            tools:ignore="RtlHardcoded,TextViewEdits" />


        <EditText
            android:id="@+id/edittext_actual_dep_per"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:maxLength="3"
            android:inputType="number"
            android:paddingLeft="@dimen/height_4"
            android:paddingRight="@dimen/height_2"
            android:textSize="@dimen/font_samll"
            tools:ignore="LabelFor,RtlHardcoded" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textview_actual_dep_value"
            style="@style/StyledTilEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/height_8"
            android:layout_weight="1.2"
            android:inputType="text"
            android:paddingLeft="@dimen/height_12"
            android:text=""
            android:textSize="@dimen/font_samll"
            tools:ignore="RtlHardcoded,RtlSymmetry,TextViewEdits" />

    </LinearLayout>

</LinearLayout>